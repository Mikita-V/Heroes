@using MVCPL.Util.Helpers
@model IEnumerable<MVCPL.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rewards)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @if (item.Photo != null)
                {
                    @Html.Raw("<img alt=\"...\" height=50 width=50 src=\"data:image/jpeg;base64," + Convert.ToBase64String(ImageHelper.MapPicture(item.Photo)) + "\" />")
                }
                else
                {
                    <img alt="..." height=50 width=50 src="../../img/no-image.jpg" />
                }
            </td>
            @if (item.Rewards != null && item.Rewards.Any())
            {
                <td>
                    @foreach (var reward in item.Rewards)
                    {
                        if (reward.Image != null)
                        {
                            @Html.Raw("<img alt=\"...\" height=50 width=50 src=\"data:image/jpeg;base64," + Convert.ToBase64String(ImageHelper.MapPicture(reward.Image)) + "\" />")
                        }
                        else
                        {
                            <img alt="..." height=50 width=50 src="../../img/no-image.jpg" />
                        }
                    }
                </td>

            }
            else
            {
                <td>No rewards yet...</td>
            }
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    @Html.ActionLink("Download user's list", "DownloadUsers")
</table>
